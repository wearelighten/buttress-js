{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "rules": {
    "max-len": [ 2, 150, 4 ],
    "max-lines": ["error", {"max": 500, "skipComments": true, "skipBlankLines": true}],
    "no-tabs": 0,
    "indent": [1, "tab"],
    "no-mixed-spaces-and-tabs": 1
  }
}
